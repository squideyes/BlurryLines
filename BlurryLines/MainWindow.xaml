<Window x:Class="BlurryLines.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BlurryLines"
        SnapsToDevicePixels="True"
        Title="BlurryLines"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel Margin="8">
        <local:Board x:Name="board" Rows="16" Columns="24" CellSize="11" />
        <Button Margin="0,4,0,0"
                Click="Button_Click"
                Content="Set Random Cell to Random Color" />
    </StackPanel>
</Window>
